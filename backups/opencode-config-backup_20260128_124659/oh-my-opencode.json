{
  "$schema": "https://raw.githubusercontent.com/code-yeongyu/oh-my-opencode/master/assets/oh-my-opencode.schema.json",
  "agents": {
    "sisyphus": {
      "disabled": false,
      "description": "Background orchestrator - runs parallel tasks",
      "model": "google/gemini-3-pro"
    },
    "prometheus": {
      "disabled": false,
      "description": "Planner - interview-based planning mode",
      "model": "google/gemini-3-pro"
    },
    "oracle": {
      "disabled": false,
      "description": "High-IQ debugging and architecture backup",
      "model": "google/gemini-3-pro"
    },
    "librarian": {
      "disabled": false,
      "description": "Docs search and codebase exploration",
      "model": "opencode/big-pickle"
    },
    "explore": {
      "disabled": false,
      "description": "Ultra-fast codebase grep",
      "model": "opencode/gpt-5-nano"
    },
    "multimodal-looker": {
      "disabled": false,
      "description": "Visual tasks and image analysis",
      "model": "google/gemini-3-flash"
    },
    "metis": {
      "model": "google/gemini-3-pro",
      "variant": "max"
    },
    "momus": {
      "model": "google/gemini-3-pro",
      "variant": "max"
    },
    "atlas": {
      "model": "google/gemini-3-pro"
    }
  },
  "context_injection": {
    "enabled": true,
    "paths": [
      "~/Developer/ai/MANIFESTO.md",
      "~/Developer/ai/AGENTS.md",
      "~/Developer/ai/skills/SKILL-INDEX.md",
      ".ai/CONTEXT.md",
      ".ai/checkpoints/LATEST.md"
    ],
    "rules": [
      "CRITICAL: Consult ~/Developer/ai/skills/ before any technical decision",
      "CRITICAL: Use skill() function to load domain-specific knowledge",
      "CRITICAL: Respect Blueprint Protocol (Plan → Approve → Execute)",
      "CRITICAL: Never execute without explicit approval ('Dale', 'Go ahead')",
      "CRITICAL: Follow Clean Architecture and SOLID from MANIFESTO.md",
      "CRITICAL: No comments in code unless justified or // TODO:"
    ]
  },
  "skills": {
    "user_skills_path": "~/Developer/ai/skills/",
    "user_skills_priority": true,
    "discovery_mode": "scan_index",
    "index_path": "~/Developer/ai/skills/SKILL-INDEX.md",
    "built_in": {
      "git-master": {
        "enabled": true,
        "description": "Atomic commits - complements user's git skills"
      },
      "playwright": {
        "enabled": false,
        "reason": "User already has playwright-skill in ~/Developer/ai/skills/"
      }
    }
  },
  "hooks": {
    "todo_enforcer": {
      "enabled": true,
      "description": "Forces completion of .ai/TO-DO.md tasks"
    },
    "comment_checker": {
      "enabled": true,
      "description": "Validates no-comments policy from MANIFESTO"
    },
    "ralph_loop": {
      "enabled": true,
      "description": "Iterates until user satisfaction"
    },
    "think_mode": {
      "enabled": true,
      "description": "Deep reasoning for complex problems"
    },
    "context_injection": {
      "enabled": true,
      "description": "Auto-injects MANIFESTO, AGENTS, SKILL-INDEX"
    }
  },
  "disabled_hooks": [
    "aggressive_truncation"
  ],
  "hooks": {
    "auto_resume": {
      "enabled": true,
      "require_approval": true,
      "description": "Auto-resume with Blueprint Protocol respect"
    },
  "background_agents": {
    "enabled": true,
    "max_concurrent": 3,
    "description": "ATHENA can launch Librarian + Explore in parallel while planning"
  },
  "lsp": {
    "enabled": true,
    "features": [
      "rename",
      "diagnostics",
      "refactor",
      "extract"
    ]
  },
  "ast_tools": {
    "enabled": true,
    "description": "AST-aware code search and refactoring"
  },
  "session_tools": {
    "enabled": true,
    "description": "HEFESTO can analyze previous sessions for debugging"
  },
  "mcps": {
    "websearch": {
      "enabled": true,
      "provider": "exa",
      "description": "AI-powered web search"
    },
    "grep_app": {
      "enabled": true,
      "description": "GitHub code search across public repos"
    },
    "context7": {
      "enabled": true,
      "description": "Official documentation search (already in user's config)"
    }
  },
  "productivity": {
    "ultrawork": {
      "enabled": true,
      "keywords": [
        "ultrawork",
        "ulw"
      ],
      "description": "Magic keyword for full orchestration"
    }
  },
  "categories": {
    "visual-engineering": {
      "model": "google/gemini-3-pro"
    },
    "ultrabrain": {
      "model": "google/gemini-3-pro"
    },
    "artistry": {
      "model": "google/gemini-3-pro",
      "variant": "max"
    },
    "quick": {
      "model": "google/gemini-3-flash"
    },
    "unspecified-low": {
      "model": "google/gemini-3-flash"
    },
    "unspecified-high": {
      "model": "google/gemini-3-flash"
    },
    "writing": {
      "model": "google/gemini-3-flash"
    }
  }
}
