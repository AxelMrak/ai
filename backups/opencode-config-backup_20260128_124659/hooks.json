{
  "version": "1.0",
  "hooks": {
    "sessionStart": {
      "command": "./init-session.sh",
      "workingDirectory": "/Users/axelmrak/Developer/ai/hooks",
      "timeout": 30000,
      "async": false
    },
    "sessionEnd": {
      "command": "./end-session.sh hooks",
      "workingDirectory": "/Users/axelmrak/Developer/ai/hooks",
      "timeout": 30000,
      "async": true
    },
    "milestone": {
      "command": "./trigger-system.sh",
      "workingDirectory": "/Users/axelmrak/Developer/ai/hooks",
      "timeout": 15000,
      "async": true,
      "triggerOn": ["fileSave", "taskComplete"]
    }
  },
  "ai": {
    "context": {
      "loadOnStart": true,
      "syncOnChange": true,
      "maxContextSize": 500
    }
  }
}
